<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre del algoritmo -->
        <TextView
            android:id="@+id/tvAlgorithmName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Algoritmo Original"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <!-- Métricas principales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvExecutionTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⏱️ 150ms"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/tvMemoryUsage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💾 2.5MB"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Métricas secundarias -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvAssignments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📋 25 asignaciones"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/tvSuccessRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="✅ 100%"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🕐 14:30:25"
            android:textSize="12sp"
            android:textColor="@color/text_hint"
            android:gravity="end"
            android:fontFamily="monospace" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>