<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    tools:context=".BenchmarkActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:title="Benchmark de Algoritmos"
        app:titleTextColor="?attr/colorOnPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título principal -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏁 Comparación de Algoritmos de Rotación"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textAlignment="center"
                android:layout_marginBottom="24dp"
                android:textColor="?attr/colorOnSurface" />

            <!-- Sección de pruebas rápidas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⚡ Pruebas Individuales"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:layout_marginBottom="12dp"
                        android:textColor="?attr/colorOnSurface" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_test_original"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="🔧 Original"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_test_sql"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="🚀 SQL"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                    <!-- Resultados individuales -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_original_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Algoritmo Original: No ejecutado"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:layout_marginBottom="4dp"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_sql_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Algoritmo SQL: No ejecutado"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sección de benchmarks -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📊 Benchmarks Comparativos"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:layout_marginBottom="12dp"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_quick_benchmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="⚡ Benchmark Rápido"
                        android:icon="@drawable/ic_rotation"
                        style="@style/Widget.Material3.Button" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_complete_benchmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="🏁 Benchmark Completo (5 iteraciones)"
                        android:icon="@drawable/ic_certification"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_stress_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💪 Prueba de Estrés (10 iteraciones)"
                        android:icon="@drawable/ic_guide"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Progress bar -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:indeterminate="true" />

            <!-- Sección de resultados -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="📈 Resultados"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorOnSurface" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_clear_results"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🗑️ Limpiar"
                            style="@style/Widget.Material3.Button.TextButton" />

                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ejecuta un benchmark para ver los resultados..."
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:fontFamily="monospace"
                        android:textIsSelectable="true"
                        android:background="?attr/colorSurfaceVariant"
                        android:padding="12dp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:minHeight="200dp"
                        android:gravity="top" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sección de estadísticas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📊 Estadísticas del Sistema"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:layout_marginBottom="12dp"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_statistics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cargando estadísticas..."
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:fontFamily="monospace"
                        android:textIsSelectable="true"
                        android:background="?attr/colorSurfaceVariant"
                        android:padding="12dp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:minHeight="100dp"
                        android:gravity="top" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>