<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWorkerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trabajador 1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWorkerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email@example.com"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvAssignedWorkstations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estaciones: 3 asignadas"
                android:textSize="12sp"
                android:textColor="@color/teal_700"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvAvailability"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="📊 Disponibilidad: 100%"
                    android:textSize="11sp"
                    android:textColor="@color/purple_700" />

                <TextView
                    android:id="@+id/tvRestrictionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Con restricciones"
                    android:textSize="11sp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvTrainerStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👨‍🏫 ENTRENADOR"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_green"
                    android:background="@drawable/status_badge_green"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvTraineeStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎯 EN ENTRENAMIENTO"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_orange"
                    android:background="@drawable/status_badge_orange"
                    android:padding="4dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switchActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>