<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWorkstationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estación 1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRequiredWorkers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trabajadores necesarios: 1"
                android:textSize="14sp"
                android:textColor="@color/teal_700"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvPriorityStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⭐ ESTACIÓN PRIORITARIA"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switchActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginTop="8dp"
                android:contentDescription="Editar estación" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginTop="4dp"
                android:contentDescription="Eliminar estación"
                android:tint="@android:color/holo_red_dark" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>