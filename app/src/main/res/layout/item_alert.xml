<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_alert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Icono de Alerta -->
        <ImageView
            android:id="@+id/iv_alert_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_warning"
            tools:ignore="UseAppTint" />

        <!-- Contenido de la Alerta -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Mensaje Principal -->
            <TextView
                android:id="@+id/tv_alert_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Mensaje de alerta"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Uso de memoria alto: 256MB / 512MB" />

            <!-- Información Adicional -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_alert_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tipo"
                    android:textSize="12sp"
                    tools:text="Memoria Alta" />

                <TextView
                    android:id="@+id/tv_alert_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="00:00:00"
                    android:textSize="12sp"
                    tools:text="14:30:25" />

            </LinearLayout>

        </LinearLayout>

        <!-- Valor de la Métrica -->
        <TextView
            android:id="@+id/tv_alert_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/count_badge_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="0.0"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="85.2"
            tools:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>