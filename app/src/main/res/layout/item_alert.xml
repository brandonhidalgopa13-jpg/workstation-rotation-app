<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardAlert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Indicadores laterales -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="12dp">

            <View
                android:id="@+id/viewSeverityIndicator"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/warning"
                android:layout_marginEnd="8dp" />

            <View
                android:id="@+id/viewRecentIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_shape"
                android:backgroundTint="@color/accent"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Iconos -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/tvSeverityIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丘멆잺"
                android:textSize="20sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCategoryIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游댃"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Header con t칤tulo y severidad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvAlertTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T칤tulo de la Alerta"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    tools:text="Sin Rotaciones Activas" />

                <TextView
                    android:id="@+id/tvSeverityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MEDIO"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/warning"
                    android:background="@drawable/badge_background"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    tools:text="CR칈TICO" />

            </LinearLayout>

            <!-- Descripci칩n -->
            <TextView
                android:id="@+id/tvAlertDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripci칩n detallada de la alerta del sistema..."
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp"
                tools:text="No hay rotaciones en progreso. El sistema est치 inactivo." />

            <!-- Footer con timestamp y fuente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvAlertTimestamp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hace 5 min"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    tools:text="15:30 - Hace 5 min" />

                <TextView
                    android:id="@+id/tvAlertSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sistema"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="italic"
                    tools:text="Monitor de Rotaciones" />

            </LinearLayout>

            <!-- Botones de acci칩n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAlertAction"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resolver"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDismissAlert"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descartar"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>