<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_background_selector"
    android:padding="8dp"
    android:minHeight="80dp">

    <!-- Información de la estación -->
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/surface"
        android:padding="8dp"
        android:layout_marginEnd="4dp">

        <TextView
            android:id="@+id/tvWorkstationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estación A"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Barra de capacidad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/progressCurrentCapacity"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:max="100"
                android:progress="75"
                android:progressTint="@color/primary" />

            <ProgressBar
                android:id="@+id/progressNextCapacity"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/accent" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvCapacityInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2/3 | 1/3"
            android:textSize="10sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Celdas de rotación actual -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCurrentAssignments"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal"
        tools:listitem="@layout/item_rotation_grid_cell" />

    <!-- Celdas de siguiente rotación -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerNextAssignments"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="4dp"
        android:orientation="horizontal"
        tools:listitem="@layout/item_rotation_grid_cell" />

</LinearLayout>