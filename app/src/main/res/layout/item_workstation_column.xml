<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/table_border"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header Mejorado con Gradiente -->
        <LinearLayout
            android:id="@+id/layoutStationHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_primary"
            android:padding="16dp"
            android:elevation="4dp">

            <!-- Icono y Nombre de Estación -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvStationIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏭"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvWorkstationName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Estación de Trabajo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:id="@+id/tvPriorityIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐"
                    android:textSize="16sp"
                    android:textColor="@color/priority_gold"
                    android:layout_marginStart="4dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Información de Capacidad Mejorada -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/capacity_info_background"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👥"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvCapacityRequirement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requiere: 3 trabajadores"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:alpha="0.9" />

            </LinearLayout>

        </LinearLayout>

        <!-- Contenido Principal con Scroll -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Sección Rotación Actual -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/current_phase_section_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🔵"
                            android:textSize="14sp"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ACTUAL"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/current_phase_color" />

                        <TextView
                            android:id="@+id/tvCurrentCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/3"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/current_phase_color"
                            android:background="@drawable/count_badge_background"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutCurrentWorkers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:minHeight="80dp" />

                </LinearLayout>

                <!-- Separador Visual Mejorado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginVertical="8dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/separator_gradient" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⬇️"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="8dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/separator_gradient" />

                </LinearLayout>

                <!-- Sección Próxima Rotación -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/next_phase_section_background"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🟠"
                            android:textSize="14sp"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="PRÓXIMA"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/next_phase_color" />

                        <TextView
                            android:id="@+id/tvNextCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/3"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/next_phase_color"
                            android:background="@drawable/count_badge_background"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutNextWorkers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:minHeight="80dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>