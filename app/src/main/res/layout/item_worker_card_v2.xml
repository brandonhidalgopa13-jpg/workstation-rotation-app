<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/cell_background_selector">

        <!-- Header con Icono y Nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Icono de estado/rol -->
            <TextView
                android:id="@+id/tvWorkerIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="ðŸ‘¤"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/icon_background_blue"
                android:layout_marginEnd="8dp"
                tools:text="ðŸ‘‘" />

            <!-- Nombre del trabajador -->
            <TextView
                android:id="@+id/tvWorkerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Juan PÃ©rez"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Juan PÃ©rez" />

            <!-- BotÃ³n de opciones -->
            <ImageView
                android:id="@+id/btnOptions"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_more_vert"
                android:tint="@color/text_secondary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="2dp"
                android:contentDescription="Opciones" />

        </LinearLayout>

        <!-- Indicador de competencia -->
        <LinearLayout
            android:id="@+id/layoutCompetencyIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:visibility="visible">

            <View
                android:id="@+id/dotCompetency1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="2dp"
                android:background="@drawable/competency_dot"
                android:backgroundTint="@color/success" />

            <View
                android:id="@+id/dotCompetency2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="2dp"
                android:background="@drawable/competency_dot"
                android:backgroundTint="@color/success" />

            <View
                android:id="@+id/dotCompetency3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="2dp"
                android:background="@drawable/competency_dot"
                android:backgroundTint="@color/success" />

            <View
                android:id="@+id/dotCompetency4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="2dp"
                android:background="@drawable/competency_dot"
                android:backgroundTint="@color/divider" />

            <View
                android:id="@+id/dotCompetency5"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="2dp"
                android:background="@drawable/competency_dot"
                android:backgroundTint="@color/divider" />

        </LinearLayout>

        <!-- Etiquetas de estado -->
        <LinearLayout
            android:id="@+id/layoutTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipLeader"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="LÃ­der"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                app:chipBackgroundColor="@color/primary"
                app:chipMinHeight="24dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTrainer"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="Entrenador"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                app:chipBackgroundColor="@color/accent"
                app:chipMinHeight="24dp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Indicador de conflicto -->
        <LinearLayout
            android:id="@+id/layoutConflictIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/error"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            tools:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš ï¸"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conflicto detectado"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
