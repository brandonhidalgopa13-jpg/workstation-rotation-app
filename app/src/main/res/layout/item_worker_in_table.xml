<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/border_light"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:minHeight="60dp">

        <!-- Avatar y Nombre del Trabajador -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <!-- Avatar Circular -->
            <TextView
                android:id="@+id/tvWorkerAvatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="👤"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/worker_avatar_background"
                android:layout_marginEnd="8dp" />

            <!-- Nombre Completo sin Cortar -->
            <TextView
                android:id="@+id/tvWorkerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Juan Pérez González"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp" />

        </LinearLayout>

        <!-- Badges Mejorados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="2dp">

            <!-- Badge de Disponibilidad -->
            <TextView
                android:id="@+id/tvAvailabilityBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90%"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/availability_badge_background"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:layout_marginEnd="3dp"
                android:visibility="gone" />

            <!-- Badge de Entrenamiento -->
            <TextView
                android:id="@+id/tvTrainingBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👨‍🏫"
                android:textSize="14sp"
                android:background="@drawable/training_badge_background"
                android:paddingHorizontal="4dp"
                android:paddingVertical="2dp"
                android:layout_marginHorizontal="2dp"
                android:visibility="gone" />

            <!-- Badge de Liderazgo -->
            <TextView
                android:id="@+id/tvLeadershipBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👑"
                android:textSize="14sp"
                android:background="@drawable/leadership_badge_background"
                android:paddingHorizontal="4dp"
                android:paddingVertical="2dp"
                android:layout_marginHorizontal="2dp"
                android:visibility="gone" />

            <!-- Badge de Restricción -->
            <TextView
                android:id="@+id/tvRestrictionBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔒"
                android:textSize="12sp"
                android:background="@drawable/restriction_badge_background"
                android:paddingHorizontal="4dp"
                android:paddingVertical="2dp"
                android:layout_marginStart="3dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Información Adicional -->
        <TextView
            android:id="@+id/tvWorkerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>