<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Toolbar Minimalista -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="1dp"
        app:title="Rotación"
        app:titleTextColor="@color/text_primary"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/text_primary" />

    <!-- Controles Minimalistas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGenerateRotation"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Generar"
            android:textSize="16sp"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/primary_blue"
            android:layout_marginEnd="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearRotation"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Limpiar"
            android:textSize="16sp"
            app:cornerRadius="24dp"
            app:strokeColor="@color/text_secondary"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <!-- Información Minimalista -->
    <TextView
        android:id="@+id/tvRotationInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Presiona Generar para crear rotaciones automáticas"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingBottom="24dp" />

    <!-- Tabla de Rotación Minimalista -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layoutRotationTable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Headers Minimalistas -->
            <LinearLayout
                android:id="@+id/layoutWorkstationHeaders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="16dp" />

            <!-- Capacidades -->
            <LinearLayout
                android:id="@+id/layoutCapacityRequirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp" />

            <!-- Separador Sutil -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_light"
                android:layout_marginVertical="16dp" />

            <!-- Rotación Actual -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actual"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:paddingBottom="12dp" />

            <LinearLayout
                android:id="@+id/layoutCurrentPhase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="120dp"
                android:paddingBottom="24dp" />

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_light"
                android:layout_marginVertical="16dp" />

            <!-- Próxima Rotación -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Próxima"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:paddingBottom="12dp" />

            <LinearLayout
                android:id="@+id/layoutNextPhase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="120dp" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>