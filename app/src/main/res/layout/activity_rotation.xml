<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_primary"
            app:title="ðŸ”„ Sistema de RotaciÃ³n"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:titleTextAppearance="@style/ToolbarTitleStyle" />

        <!-- Control Panel with Gradient Background -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Panel de Control"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGenerateRotation"
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Generar RotaciÃ³n"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_rotation"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:cornerRadius="16dp"
                        app:backgroundTint="@color/primary_blue"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearRotation"
                        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Limpiar"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:icon="@android:drawable/ic_menu_delete"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:cornerRadius="16dp"
                        app:strokeColor="@color/accent_orange"
                        android:textColor="@color/accent_orange"
                        app:iconTint="@color/accent_orange"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/info_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvRotationInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="El sistema genera rotaciones automÃ¡ticas considerando entrenamiento, disponibilidad y prioridades. Solo trabajadores con estaciones asignadas participan."
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Rotation Table Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Table Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/gradient_primary"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“Š"
                            android:textSize="24sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tabla de RotaciÃ³n"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <!-- Horizontal Scroll for Table -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:scrollbars="horizontal"
                        android:fadeScrollbars="false"
                        android:scrollbarStyle="outsideOverlay"
                        android:fillViewport="false"
                        android:smoothScrollbar="true">

                        <LinearLayout
                            android:id="@+id/layoutRotationTable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/table_background"
                            android:padding="8dp">

                            <!-- Header with workstation names -->
                            <LinearLayout
                                android:id="@+id/layoutWorkstationHeaders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/gradient_secondary"
                                android:padding="12dp"
                                android:elevation="2dp" />

                            <!-- Capacity requirements row -->
                            <LinearLayout
                                android:id="@+id/layoutCapacityRequirements"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@color/capacity_background"
                                android:padding="8dp" />

                            <!-- Current Phase Section -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="16dp">

                                <!-- Current Phase Header -->
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="4dp"
                                    app:cardBackgroundColor="@color/current_phase_header">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="12dp"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="ðŸ“"
                                            android:textSize="20sp"
                                            android:layout_marginEnd="8dp" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="ROTACIÃ“N ACTUAL"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:textColor="@android:color/white"
                                            android:gravity="center" />

                                    </LinearLayout>

                                </com.google.android.material.card.MaterialCardView>

                                <!-- Current phase workers -->
                                <LinearLayout
                                    android:id="@+id/layoutCurrentPhase"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:minHeight="140dp"
                                    android:background="@drawable/phase_background_current"
                                    android:padding="8dp"
                                    android:layout_marginTop="8dp" />

                            </LinearLayout>

                            <!-- Next Phase Section -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="24dp">

                                <!-- Next Phase Header -->
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="4dp"
                                    app:cardBackgroundColor="@color/next_phase_header">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="12dp"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="ðŸ”„"
                                            android:textSize="20sp"
                                            android:layout_marginEnd="8dp" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="PRÃ“XIMA ROTACIÃ“N"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:textColor="@android:color/white"
                                            android:gravity="center" />

                                    </LinearLayout>

                                </com.google.android.material.card.MaterialCardView>

                                <!-- Next phase workers -->
                                <LinearLayout
                                    android:id="@+id/layoutNextPhase"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:minHeight="140dp"
                                    android:background="@drawable/phase_background_next"
                                    android:padding="8dp"
                                    android:layout_marginTop="8dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button for Quick Actions -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabQuickRotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="RotaciÃ³n RÃ¡pida"
        app:icon="@drawable/ic_rotation"
        app:backgroundTint="@color/accent_orange"
        app:iconTint="@android:color/white"
        android:textColor="@android:color/white"
        app:cornerRadius="28dp"
        android:visibility="gone" />

    <!-- Watermark -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:alpha="0.6"
        android:background="@drawable/watermark_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/watermark_icon_gear"
            android:textSize="12sp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/watermark_creator_short"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="italic"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>