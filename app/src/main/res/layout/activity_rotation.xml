<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Toolbar Minimalista -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="1dp"
        app:title="Rotación"
        app:titleTextColor="@color/text_primary"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/text_primary" />

    <!-- Controles Mejorados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGenerateRotation"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="🔄 Generar Rotación"
            android:textSize="16sp"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/primary_blue"
            android:layout_marginEnd="8dp"
            app:icon="@drawable/ic_rotation"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDownloadImage"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="📷"
            android:textSize="18sp"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/accent_green"
            android:layout_marginHorizontal="4dp"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearRotation"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="🗑️"
            android:textSize="18sp"
            app:cornerRadius="28dp"
            app:strokeColor="@color/text_secondary"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Información y Estadísticas -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRotationInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?attr/colorSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvRotationInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎯 Presiona Generar para crear rotaciones automáticas inteligentes"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:id="@+id/layoutRotationStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvStatsWorkers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="👥 0 trabajadores"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvStatsRotating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🔄 0% rotando"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvStatsTraining"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🎓 0 entrenamientos"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Tabla de Rotación Mejorada -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRotationTable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="?attr/colorSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header de la Tabla -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/gradient_primary"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊"
                    android:textSize="24sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tabla de Rotación Inteligente"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.8"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Contenido Scrolleable Mejorado -->
            <ScrollView
                android:id="@+id/scrollViewVertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:scrollbars="vertical"
                android:fadeScrollbars="false">
                
                <HorizontalScrollView
                    android:id="@+id/scrollViewRotation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:scrollbars="horizontal"
                    android:fadeScrollbars="false"
                    android:background="@color/table_background">

                    <LinearLayout
                        android:id="@+id/layoutRotationTable"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/table_background"
                        android:minWidth="800dp">

                        <!-- Título Principal Mejorado -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/gradient_primary"
                            android:padding="16dp"
                            android:layout_marginBottom="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🏭"
                                android:textSize="24sp"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ESTACIONES DE TRABAJO"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tvRotationTimestamp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.8"
                                android:visibility="gone" />

                        </LinearLayout>

                        <!-- Contenedor de Estaciones Mejorado -->
                        <LinearLayout
                            android:id="@+id/layoutWorkstationColumns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="top"
                            android:padding="8dp" />

                        <!-- Información de Ayuda -->
                        <LinearLayout
                            android:id="@+id/layoutHelpInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/info_background"
                            android:padding="16dp"
                            android:layout_marginTop="16dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="💡 Guía Visual"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="🔵 Rotación Actual  •  🟠 Próxima Rotación  •  👑 Líder  •  👨‍🏫 Entrenador  •  🎯 En Entrenamiento  •  🏆 Certificado"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:lineSpacingExtra="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>
                
            </ScrollView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>