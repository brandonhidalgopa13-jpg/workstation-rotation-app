<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Sistema de Rotación"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btnGenerateRotation"
            style="@style/PrimaryButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🔄 Generar Rotación"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnClearRotation"
            style="@style/SecondaryButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🗑️ Limpiar"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvRotationInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trabajadores elegibles para rotación: Solo aquellos con estaciones asignadas"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:padding="16dp"
        android:background="@color/light_gray" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/layoutRotationTable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header with workstation names -->
            <LinearLayout
                android:id="@+id/layoutWorkstationHeaders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/primary_blue"
                android:padding="8dp" />

            <!-- Capacity requirements row -->
            <LinearLayout
                android:id="@+id/layoutCapacityRequirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/background_surface"
                android:padding="8dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/primary_blue"
                android:layout_marginVertical="8dp" />

            <!-- Current Phase Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📍 ROTACIÓN ACTUAL"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:gravity="center"
                android:padding="8dp"
                android:background="@color/background_surface" />

            <!-- Current phase workers -->
            <LinearLayout
                android:id="@+id/layoutCurrentPhase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="120dp"
                android:background="@color/background_light" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/accent_orange"
                android:layout_marginVertical="8dp" />

            <!-- Next Phase Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔄 PRÓXIMA ROTACIÓN"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/accent_orange"
                android:gravity="center"
                android:padding="8dp"
                android:background="@color/background_surface" />

            <!-- Next phase workers -->
            <LinearLayout
                android:id="@+id/layoutNextPhase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="120dp"
                android:background="@color/background_light" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>