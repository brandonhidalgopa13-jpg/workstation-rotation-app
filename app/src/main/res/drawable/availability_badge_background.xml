<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- High availability (80-100%) -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/availability_high" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Medium availability (50-79%) -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/availability_medium" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Low availability (0-49%) -->
    <item>
        <shape>
            <solid android:color="@color/availability_low" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>