<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Icon Background Styles -->
    <style name="IconBackgroundBlue">
        <item name="android:background">@drawable/icon_background_blue</item>
    </style>
    
    <style name="IconBackgroundOrange">
        <item name="android:background">@drawable/icon_background_orange</item>
    </style>
    
    <style name="IconBackgroundGreen">
        <item name="android:background">@drawable/icon_background_green</item>
    </style>
    
    <!-- Text Styles -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="SubHeaderTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="BodyTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Additional Styles -->
    <style name="RotationNumberStyle">
        <item name="android:background">@drawable/rotation_number_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="WorkstationHeaderStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <!-- Enhanced Rotation System Styles -->
    <style name="ToolbarTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="PhaseHeaderStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <style name="WorkerNameStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>
    
    <style name="BadgeTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingHorizontal">6dp</item>
        <item name="android:paddingVertical">2dp</item>
    </style>
    
</resources>