<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Icon Background Styles -->
    <style name="IconBackgroundBlue">
        <item name="android:background">@drawable/icon_background_blue</item>
    </style>
    
    <style name="IconBackgroundOrange">
        <item name="android:background">@drawable/icon_background_orange</item>
    </style>
    
    <style name="IconBackgroundGreen">
        <item name="android:background">@drawable/icon_background_green</item>
    </style>
    
    <!-- Text Styles -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="SubHeaderTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="BodyTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Additional Styles -->
    <style name="RotationNumberStyle">
        <item name="android:background">@drawable/rotation_number_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="WorkstationHeaderStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <!-- Enhanced Rotation System Styles -->
    <style name="ToolbarTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="PhaseHeaderStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <style name="WorkerNameStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>
    
    <style name="BadgeTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingHorizontal">6dp</item>
        <item name="android:paddingVertical">2dp</item>
    </style>
    
    <!-- Modern Button Styles v2.4.0 -->
    <style name="ModernPrimaryButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_primary_modern</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ModernSecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_secondary_modern</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Modern Card Styles -->
    <style name="ModernCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/card_elevated</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <!-- Onboarding Styles -->
    <style name="OnboardingTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onboarding_text_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="OnboardingSubtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/onboarding_text_secondary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="OnboardingButton" parent="ModernPrimaryButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Enhanced Text Styles -->
    <style name="HeaderTextLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="HeaderTextMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="BodyTextLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="BodyTextMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- Leadership Styles -->
    <style name="LeadershipBadge">
        <item name="android:background">@drawable/gradient_leadership</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>
    
</resources>